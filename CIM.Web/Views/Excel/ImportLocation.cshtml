@{
    ViewBag.Title = "Import Location";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Download Template </h3>

<div><a href="/Excel/Download?filename=Location" target="_blank">Click here to Download Location Template</a></div>
<hr />
<h3>Import Location</h3>
@ViewBag.Error
@using (Html.BeginForm("ImportLocation", "Excel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="form-group">
    <label class="control-label col-md-2" for="picture">Select File:  </label>
    <div class="col-md-5">
        <input type="file" class="form-control-file" id="FileUpload" name="excelfile" />
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <button type="submit" class="btn btn-primary" value="import">Import</button>
    </div>
</div>
}