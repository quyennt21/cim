@{
    ViewBag.Title = "Forward Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EditSelect", "Report", FormMethod.Post, new { @class = "form-horizontal form-label-left", autocomplete = "off" }))
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Edit Selected PIC</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-md-2" for="startDate">User: </label>
        <div class="col-md-10">
            @Html.DropDownList("userId", new SelectList(ViewBag.userViewModel, "ID", "UserName"), htmlAttributes: new { @class = "form-control dropdown" })
            @Html.ValidationMessage("userId", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Note:</label>
        <div class="col-md-10">
            <textarea class="form-control" name="noteForward" id="noteForward" rows="5"></textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="hidden" name="selectListItem" value="@ViewBag.selectListItem">
            <input type="submit" value="Forward" class="btn btn-primary" />
            <a href="@Url.Action("Index")" class="btn btn-link">Cancel</a>
        </div>
    </div>
</div>
}