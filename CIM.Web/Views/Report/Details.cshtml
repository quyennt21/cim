@model CIM.Web.Models.ReportViewModel

@{
    ViewBag.Title = "Report Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <h4>Report ID: @Html.DisplayFor(model => model.ID)</h4>
</div>
<hr />
<div class="item-details">
    <div class="container">
        <div class="row">
            <div class="col">
                <dt>
                    Status:
                </dt>
                <dd>
                    @{
                        var status = @Html.DisplayFor(model => model.status).ToString();
                    }
                    @if (status.Equals("1"))
                    {
                    <div class="text-muted font-weight-bold">
                        OPENING
                    </div>
                    }
                    else if (status.Equals("2"))
                    {
                    <div class="text-primary font-weight-bold">
                        PROCESSING
                    </div>
                    }
                    else if (status.Equals("3"))
                    {
                    <div class="text-success font-weight-bold">
                        DONE
                    </div>
                    }
                    else if (status.Equals("4"))
                    {
                    <div class="text-warning font-weight-bold">
                        UPWORK
                    </div>
                    }
                    else
                    {
                    <div class="text-danger font-weight-bold">
                        CANCEL
                    </div>
                    }
                </dd>
                <dt>
                    User Report:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.UserReport)
                </dd>
                <dt>
                    Request Manager:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.RequestManager)
                </dd>
                <dt>
                    Report At:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ReportAt)
                </dd>
                <dt>
                    Comment:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Comment)
                </dd>
            </div>
            <div class="col">
                <dt>
                    Picture:
                </dt>
                <dd>
                    <img src="~/Data/Reports/@Model.Picture" width="100" height="100" />
                </dd>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <dt>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CreatedAt)
                </dd>
            </div>
        </div>
    </div>
</div>
<div class="col-md-offset-3 col-md-10">
    <a class="btn btn-primary btn-edit" href="@Url.Action("Edit", new { idA = Model.ID } )">Update</a>
    <a class="btn btn-link btn-back" href="@Url.Action("Index")">Back</a>
</div>