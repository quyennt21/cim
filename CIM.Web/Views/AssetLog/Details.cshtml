@model CIM.Web.Models.AssetLogViewModel

@{
    ViewBag.Title = "Asset Log Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h4>Asset Log ID: @Html.DisplayFor(model => model.ID)</h4>
</div>
<hr />
<div class="item-details">
    <div class="container">
        <div class="row">
            <div class="col">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayName("Asset Name:")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Asset.Name)
                    </dd>
                    <dt>
                        @Html.DisplayName("Asset Code:")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Asset.AssetCode)
                    </dd>
                    <dt>
                        @Html.DisplayName("UserName:")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ApplicationUser.UserName)
                    </dd>
                    <dt>
                        @Html.DisplayName("Message:")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Message)
                    </dd>
                </dl>
            </div>
            <div class="col">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayName("Created At:")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CreatedAt)
                    </dd>

                    <dt>
                        @Html.DisplayName("Updated At:")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.UpdatedAt)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<a class="btn btn-link btn-back" href="@Url.Action("Index")">Back</a>