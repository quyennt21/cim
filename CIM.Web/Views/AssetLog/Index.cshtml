@model CIM.Web.Infrastructure.PaginationSet<CIM.Web.Models.AssetLogViewModel>
@{
    ViewBag.Title = "Asset Log";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <div class="row">
        <div class="col-md-4"><h3 class="mb-4">Asset Log</h3></div>
    </div>
    @Html.Partial("_Search")
</div>
@if (Model.Count > 0)
{
<table class="table table-responsive-md table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayName("Asset Code")
            </th>
            <th>
                @Html.DisplayName("Asset Name")
            </th>
            <th>
                @Html.DisplayName("User")
            </th>
            <th>
                @Html.DisplayName("Message")
            </th>
            <th>
                @Html.DisplayName("Created At")
            </th>
            <th>
                @Html.DisplayName("Action")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Asset.AssetCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Asset.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
            </td>
            <td class="text-break text-wrap">@(item.Message)</td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ID })
            </td>
        </tr>
            }
    </tbody>
</table>
}
else
{
<div class="result-search-msg">
    <p>No results found</p>
</div>
}
@Html.Partial("_Pagination", Model)