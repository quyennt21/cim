@model CIM.Web.Models.WarrantyViewModel
@{
    ViewBag.Title = "Edit Warranty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Warranty", FormMethod.Post, new { @class = "form-horizontal form-label-left", autocomplete = "off" }))
{
<div class="form-horizontal">
    <h4>Edit Warranty ID:  @Html.DisplayFor(model => model.ID)</h4>
    <hr />
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        <label class="control-label col-md-2" for="date-warranty">Asset Name:</label>
        <div class="col-md-10">
            <input type="text" class="form-control" id="assetName" disabled value="@(Model.Asset.Name)" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="date-warranty">Asset Code:</label>
        <div class="col-md-10">
            <input type="text" class="form-control" id="assetCode" disabled value="@(Model.Asset.AssetCode)" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="date-warranty">Date Warranty:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DateWarranty, new { htmlAttributes = new { @class = "form-control datepicker" } })
            @Html.ValidationMessageFor(model => model.DateWarranty, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="date-warranty">End Date:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control datepicker" } })
            @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="date-warranty">Reason:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Reason, new { htmlAttributes = new { @class = "form-control", @rows = "5" } })
            @Html.ValidationMessageFor(model => model.Reason, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="date-warranty">Result:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Result, new { htmlAttributes = new { @class = "form-control", @rows = "5" } })
            @Html.ValidationMessageFor(model => model.Result, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="active-maintenance">Enable:</label>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Active)
                @Html.ValidationMessageFor(model => model.Active, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a href="@Url.Action("Index")" class="btn btn-link">Cancel</a>
        </div>
    </div>
</div>
}