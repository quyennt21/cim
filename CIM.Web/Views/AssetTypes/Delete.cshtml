@model CIM.Web.Models.AssetTypeViewModel

@{
    ViewBag.Title = "Delete Asset Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    <dl class="dl-horizontal">
        <h4>Are you sure you want to delete this?</h4>
        <hr />
        <div class="row">
            <strong class="col-md-2 ">Name:</strong>
            <div class="col">@Html.DisplayFor(model => model.Name)</div>
        </div>

        <p></p>
        <div class="row">
            <strong class="col-md-2">Create At: </strong>
            <div class="col">@Html.DisplayFor(model => model.CreatedAt)</div>
        </div>

        <p></p>
        <div class="row">
            <strong class="col-md-2">Update At: </strong>
            <div class="col">@Html.DisplayFor(model => model.UpdatedAt)</div>
        </div>

        @if (ViewBag.AssetAttribute != null)
        {
        <p></p>
        <div class="row">
            <strong class="col-md-2">Asset Attribute: </strong>
            <div class="col-md-10">
                @foreach (var item in ViewBag.AssetAttribute)
                    {
                @item.Name
                <br />
                    }
            </div>
        </div>

        }
    </dl>

    @using (Html.BeginForm())
    {
    @Html.AntiForgeryToken()
    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-primary active" />
        <p></p>
        @Html.ActionLink("Back to List", "Index")
    </div>
    }
    </dl>
    <p></p>
</div>