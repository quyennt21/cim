@using (Html.BeginForm("Search", "MaintenanceDiary", FormMethod.Get, new { @class = "form-inline form-label-left mb-4 ", autocomplete = "off" }))
{
<div class="form-group mr-4">
    <label class="mr-3" for="asset">Asset: </label>
    <input type="search" class="form-control" id="asset" placeholder="Enter code or name..." value="@(ViewBag.assetSearch)" name="assetSearch">
</div>
<div class="form-group mr-4">
    <label class="mr-3" for="asset">From Date:  </label>
    <input type="date" class="form-control" id="from-date" value="@(ViewBag.fromDate)" name="fromDate">
</div>
<div class="form-group mr-4">
    <label class="mr-3" for="asset">To Date:  </label>
    <input type="date" class="form-control" id="to-date" value="@(ViewBag.toDate)" name="toDate">
</div>
<div class="form-group">
    <!-- Submit button -->
    <button class="btn btn-primary" type="submit">Search</button>
</div>

<a class="btn btn-primary ml-2" href="@Url.Action("Export")">Export All</a>
}   