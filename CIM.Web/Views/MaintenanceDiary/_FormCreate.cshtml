@model CIM.Web.Models.MaintenanceDiaryViewModel

@using (Html.BeginForm("Create", "MaintenanceDiary", FormMethod.Post, new { @class = "form-horizontal form-label-left", autocomplete = "off" }))
{
@Html.AntiForgeryToken()
<div class="form-horizontal">
    <h4>Create Maintenance Diary </h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.Asset.Name)
    @Html.HiddenFor(model => model.Asset.ID)

    <div class="form-group">
        <label class="control-label col-md-2" for="assetName">Asset Name:</label>
        <div class="col-md-10">
            <input type="text" class="form-control" id="assetName" disabled value="@(Model.Asset.Name)" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="assetCode">Asset Code:</label>
        <div class="col-md-10">
            <input type="text" class="form-control" id="assetCode" disabled value="@(Model.Asset.AssetCode)" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="maintenanceDate">Maintenance Date:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.MaintenanceDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MaintenanceDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="description">Description:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @rows = "5" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a href="@Url.Action("Details", "Asset", new { id = ViewBag.assetId})" class="btn btn-link">Cancel</a>
        </div>
    </div>
</div>
}