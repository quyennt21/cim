@model CIM.Web.Models.MaintenanceDiaryViewModel

@{
    ViewBag.Title = "Maintenance Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h4>Maintenance Diary ID: @Html.DisplayFor(model => model.ID)</h4>
</div>
<hr />
<div class="item-details">
    <div class="container">
        <div class="row">
            <div class="col">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayName("Asset Code:")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Asset.AssetCode)
                    </dd>
                    <dt>
                        @Html.DisplayName("Asset Name:")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Asset.Name)
                    </dd>
                    <dt>
                        @Html.DisplayName("Maintenance Date:")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.MaintenanceDate)
                    </dd>
                    <dt>
                        @Html.DisplayName("Description:")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                </dl>
            </div>
            <div class="col">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayName("Created At:")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CreatedAt)
                    </dd>

                    <dt>
                        @Html.DisplayName("Updated At:")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.UpdatedAt)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="col-md-offset-3 col-md-10">
    <a class="btn btn-primary btn-edit" href="@Url.Action("Edit", new { id = Model.ID } )">Edit</a>
    <a class="btn btn-link btn-back" href="@Url.Action("Index")">Back</a>
</div>