@model CIM.Web.Infrastructure.PaginationSet<CIM.Web.Models.MaintenanceDiaryViewModel>

@{
    ViewBag.Title = "Maintenance Diary Management";
    var pageIndex = Model.Page;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <div class="row">
        <div class="col-md-5"><h3 class="mb-4">Maintenance Diary Management</h3></div>
    </div>
    @Html.Partial("_Search")
</div>
@if (TempData["AlertMessage"] != null)
{
    <div id="AlertDiary" class="alert @TempData["AlertType"] hide">
        @TempData["AlertMessage"]
    </div>
}
@if (Model.Count > 0)
{
    <table class="table table-responsive-md table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayName("Asset Code")
                </th>
                <th>
                    @Html.DisplayName("Asset Name")
                </th>
                <th>
                    @Html.DisplayName("Maintenance Date")
                </th>
                <th>
                    @Html.DisplayName("Description")
                </th>
                <th>
                    @Html.DisplayName("Action")
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Asset.AssetCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Asset.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaintenanceDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "mr-1" })|
                        @Html.ActionLink("Details", "Details", new { id = item.ID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="result-search-msg">
        <p>No results found</p>
    </div>
}

@Html.Partial("_Pagination", Model)
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#AlertDiary').removeClass('hide');
            $('#AlertDiary').delay(3000).slideUp(500);
        });
    </script>
}