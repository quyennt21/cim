@{
    var listStatus = new SelectList(ViewBag.listStatus, "Value", "Text").ToList();
}

@using (Html.BeginForm("Index", "MyReport", FormMethod.Get, new { @class = "form-inline form-label-left mb-4 ", autocomplete = "off" }))
{
        <div class="form-group mr-4">
            <label class="mr-3" for="statusSearch">Status: </label>
            @Html.DropDownList("status", listStatus, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>&nbsp;</label>
            <!-- Submit button -->
            <button class="form-control btn btn-primary" type="submit">Search</button>
        </div>
}